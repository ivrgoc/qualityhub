# QualityHub Environment Configuration
# Copy this file to .env and update the values for your environment

# =============================================================================
# DATABASE
# =============================================================================

# PostgreSQL connection URL
# Format: postgresql://USER:PASSWORD@HOST:PORT/DATABASE
DATABASE_URL=postgresql://qualityhub:qualityhub_secret@localhost:5432/qualityhub

# Individual PostgreSQL settings (used by docker-compose)
POSTGRES_USER=qualityhub
POSTGRES_PASSWORD=qualityhub_secret
POSTGRES_DB=qualityhub
POSTGRES_PORT=5432

# =============================================================================
# REDIS
# =============================================================================

# Redis connection URL
# Format: redis://HOST:PORT
REDIS_URL=redis://localhost:6379

# Redis port (used by docker-compose)
REDIS_PORT=6379

# =============================================================================
# AUTHENTICATION
# =============================================================================

# JWT secret key for signing tokens
# IMPORTANT: Change this to a secure random string in production!
# Generate with: openssl rand -base64 64
JWT_SECRET=your_jwt_secret_here_change_in_production

# JWT token expiration (in seconds)
JWT_ACCESS_TOKEN_EXPIRY=900
JWT_REFRESH_TOKEN_EXPIRY=604800

# =============================================================================
# AI SERVICES
# =============================================================================

# OpenAI API key for AI-powered test generation
# Get your key at: https://platform.openai.com/api-keys
OPENAI_API_KEY=

# Anthropic API key (optional alternative AI provider)
# Get your key at: https://console.anthropic.com/
ANTHROPIC_API_KEY=

# Default AI provider (openai or anthropic)
DEFAULT_AI_PROVIDER=openai

# =============================================================================
# APPLICATION
# =============================================================================

# Environment mode (development, staging, production)
NODE_ENV=development

# API port
API_PORT=3000

# Frontend port
WEB_PORT=5173

# =============================================================================
# EMAIL (Development - Mailhog)
# =============================================================================

# SMTP settings for email
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_USER=
SMTP_PASSWORD=

# Mailhog UI port (development only)
MAILHOG_UI_PORT=8025
