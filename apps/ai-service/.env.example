# QualityHub AI Service Configuration

# Application
APP_NAME=QualityHub AI Service
APP_VERSION=0.1.0
DEBUG=false
ENVIRONMENT=development
LOG_LEVEL=INFO

# Server
HOST=0.0.0.0
PORT=8000

# API
API_PREFIX=/api/v1

# CORS (JSON array of allowed origins)
CORS_ORIGINS=["http://localhost:3000","http://localhost:5173"]

# AI Provider Configuration
# Set at least one API key for AI-powered generation.
# Without an API key, the service runs in mock mode.
OPENAI_API_KEY=
ANTHROPIC_API_KEY=

# Default provider: "anthropic" or "openai"
DEFAULT_AI_PROVIDER=anthropic

# Model configuration (optional, uses defaults if not set)
# OPENAI_MODEL=gpt-4o
# ANTHROPIC_MODEL=claude-sonnet-4-20250514
# OPENAI_TEMPERATURE=0.7
# ANTHROPIC_TEMPERATURE=0.7
# OPENAI_MAX_TOKENS=4096
# ANTHROPIC_MAX_TOKENS=4096

# API Security (comma-separated list of valid API keys)
# Leave empty in development to skip key validation
# API_KEYS=["key1","key2"]

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW_SECONDS=60

# Generation Limits
MAX_TEST_CASES_PER_REQUEST=10
MAX_BDD_SCENARIOS_PER_REQUEST=10
