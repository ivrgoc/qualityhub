{
  "name": "qualityhub",
  "version": "1.0.0",
  "private": true,
  "description": "AI-powered test management platform for QA teams",
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "test": "turbo run test",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "db:migrate": "pnpm --filter @qualityhub/api run db:migrate",
    "db:migrate:generate": "pnpm --filter @qualityhub/api run db:migrate:generate",
    "db:seed": "pnpm --filter @qualityhub/api run db:seed",
    "clean": "turbo run clean && rm -rf node_modules",
    "typecheck": "turbo run typecheck",
    "validate:turbo": "node scripts/validate-turbo-config.js",
    "validate:tsconfig": "node scripts/validate-tsconfig.js",
    "validate:env": "node scripts/validate-env-example.js"
  },
  "keywords": [
    "test-management",
    "qa",
    "testing",
    "quality-assurance"
  ],
  "author": "",
  "license": "ISC",
  "packageManager": "pnpm@10.28.1",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "devDependencies": {
    "prettier": "^3.2.5",
    "turbo": "^2.3.0"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "bcrypt",
      "esbuild"
    ]
  }
}
